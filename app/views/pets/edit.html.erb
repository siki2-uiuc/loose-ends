<div>
  <div>
    <h2>
      Edit pet
    </h2>

     <% @pet.errors.full_messages do |error| %>
      <p><%= error %></p>
    <% end %>

     <%= form_with model: @pet do |form| %>
      <div>
          <%# <label for="name_box">
            Name
          </label> %>

          <%= form.label :name %>

          <%# <input type="text" id="name_box" name="query_name" value="<%= @pet.name %>
          <%= form.text_field :name %>
        </div>

        <div>
          <%# <label for="age">
            Age
          </label> %>

          <%= form.label :age %>

          <%= form.text_field :age%>
          <%# <input type="text" id="age" name="age" value="<%= @pet.age %>
        </div>

        <div>
          <%# <label for="species_id_box">
            Species
          </label> %>

          <%= label_tag :species_id %>

          <%# <input type="text" id="species_id_box" name="query_species_id"> %>
          <%= text_field_tag :species_id %>
        </div>

        <%= form.submit "Update pet" %>
      </form>
    <% end %>

    <hr>
    <hr>
    <form action="/pets/<%= @pet.id %>"  method="post" >

      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">

      <%# For creating Patch CRUD operations %>
      <input type="hidden" name="_method" value="patch" >

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @pet.name %>">
      </div>

      <div>
        <label for="age_box">
          Age
        </label>

        <input type="text" id="age_box" name="query_age" value="<%= @pet.age %>">
      </div>

      <div>
        <label for="species_id_box">
          Species
        </label>

        <input type="text" id="species_id_box" name="query_species_id" value="<%= @pet.species_id %>">
      </div>

      <button>
        Update pet
      </button>
    </form>
  </div>
</div>
