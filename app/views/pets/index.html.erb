<div>
  <div>
    <h1>
      List of all pets
    </h1>
  </div>
</div>
<div>
  <a href="/pets/new">Create new pet</a>
</div>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Age
        </th>

        <th>
          Species
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_pets.each do |a_pet| %>
      <tr>
        <td>
          <%= a_pet.id %>
        </td>

        <td>
          <%= a_pet.name %>
        </td>

        <td>
          <%= a_pet.age %>
        </td>

        <td>
          <%= a_pet.species_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_pet.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_pet.updated_at) %> ago
        </td>

        <td>
          <a href="/pets/<%= a_pet.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
